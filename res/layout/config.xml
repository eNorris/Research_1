<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/configAutoDetectCheckBox_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoDetectLabel_str" />

    <Button
        android:id="@+id/configManualDetectButton_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manualDetect_str" />

    <TextView
        android:id="@+id/configNumBinsTextView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numBins_str"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/configBinSelectorSpinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/configAutoResizeTextView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configAutoRescale_str"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/configAutoResizeSpinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configRecordUntil_str"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/configRecordUntilSpinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/configDoneButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:text="@string/configDone_str" />

</LinearLayout>