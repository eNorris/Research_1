<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/coreSelectSpinner_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/coreSelectSpinnerDefault" />
        
        <Button
        android:id="@+id/spectrumDoneButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/coreDoneButton_str" />
        
    </LinearLayout>

    
    
    <com.research.test.SpectrumView
		   android:id="@+id/spectrumSurfaceView_id"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" />

</LinearLayout>